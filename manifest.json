{
  "manifest_version": 3,
  "name": "YandexTracker Mobile",
  "version": "1.0",
  "description": "Отслеживает посещение учебных сайтов",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "YandexTracker Mobile"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
